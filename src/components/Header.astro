<header class="header">
  <!-- ロゴ -->
  <h1 class="top__logo">
    <img src="/images/top_logo.svg" alt="トップページロゴ" />
  </h1>
  <!-- エントリーリンクとハンバーガー -->
  <div class="top__link--nav">
    <div class="top__link--entry">
      <a href="#">Entry</a>
    </div>

    <div class="hamburger">
      <span></span>
      <span></span>
      <span></span>
    </div>
  </div>

  <style>
    @charset "UTF-8";

    body {
      background-color: #e8e8e8;
    }

    ul {
      list-style: none;
    }
    a {
      color: #000;
      text-decoration: none;
    }

    header {
      display: flex;
      justify-content: space-between;
      align-items: center;
      margin-inline: 40px;
      margin-block-start: 14px;
    }
    /* ロゴ */
    .top__logo {
      width: 332.98px;
      height: 30.78px;
    }

    /* エントリーリンクとハンバーガー */
    .top__link--nav {
      display: flex;
      align-content: center;
    }

    /* エントリーリンク*/
    .top__link--entry {
      width: 174px;
      height: 46px;
      justify-content: center;
      font-size: 24px;
      font-family: 'Roboto', serif;
      margin-inline-end: 24px;
      padding-inline: 48px;
      border-left: 1px solid #000;
      border-right: 1px solid #000;
    }

    /* ハンバーガーメニュー */
    .hamburger {
      width: 46px;
      height: 46px;
      align-content: center;
      justify-items: center;
    }
    /* ハンバーガーメニューの線 */
    .hamburger span {
      width: 30px;
      height: 2px;
      background-color: #000;
      display: block;
    }

    .hamburger span:nth-child(1) {
      top: 0;
    }

    .hamburger span:nth-child(2) {
      margin: 8px 0;
    }

    .hamburger span:nth-child(3) {
      top: 0;
    }
  </style>
</header>
